<div>
  <%= form_for(@user, url: {controller:"auth",action: "login"}) do |f| %>
      <div>
        <label>user name</label>
        <%= f.text_field :username %>
      </div>
      <div>
        <label>password</label>
        <%= f.text_field :password %>
      </div>
      <div>
        <%= f.submit %>
      </div>
  <% end %>

</div>