<div class="container">
  <div class="row">
    <div class="span12">
      <h2>编辑活动</h2>
      <%= form_for :event, url: event_path(@event.id), method: :patch do |f| %>
          <% if @event.errors.any? %>
              <div id="errorExplanation">
                <h2>
                  <%= pluralize(@event.errors.count, "error") %>
                </h2>
                <ul>
                  <% @event.errors.full_messages.each do |msg| %>
                    <li><%= msg  %></li>
                  <% end %>
                </ul>
              </div>
           <% end %>
          <%= f.label :name, "活动名称"  %>
          <%= f.text_field :name  %>

          <%= f.label :describe, "活动描述"  %>
          <%= f.text_area :describe  %>

          <%= f.label :data, "活动日期"  %>
          <%= f.date_select :data  %>

          <%= f.label :location, "地址"  %>
          <%= f.text_field :location  %>
          <br>
          <%= f.submit "更新活动"  %>
          <br>
          <%= link_to '返回所有活动', events_path  %>
      <% end  %>
    </div>
  </div>
</div>
